# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-256-bits-change-this-in-production
JWT_EXPIRES_IN=24h

# Database - Update with your production database URL
# Production Environment Variables for Render

# REQUIRED: PostgreSQL Database URL from Render
DATABASE_URL=postgresql://username:password@host:port/database

# REQUIRED: JWT Secret (minimum 32 characters)
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long

# REQUIRED: Application Environment
NODE_ENV=production

# REQUIRED: Server Port (Render uses 10000)
PORT=10000

# OPTIONAL: CORS Origins (if needed)
ALLOWED_ORIGINS=https://your-app-name.onrender.com

# Security Features
ENABLE_RATE_LIMITING=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Performance
CACHE_STATIC_ASSETS=true
CACHE_TTL=86400

